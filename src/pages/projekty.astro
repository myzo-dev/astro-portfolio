---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Projects from '../components/Projects.astro';
import { Icon } from 'astro-icon/components';

const projects = await getCollection('work');
---

<Layout title="Projekty | Myžo" description="Od dizajnu vo Figme k hotovému produktu">
    <section class="section-offset-first container">
        <header class="mb-96 lg:mb-112 flex justify-between items-end">
            <h2 class="lg:h1 max-w-[700px]">Od dizajnu vo Figme k hotovému produktu</h2>

            <figure class="mb-9 size-24 shrink-0">
                <Icon name="down-left-arrow" class="text-white" />
            </figure>
        </header>

        <Projects projects={ projects } />
    </section>
</Layout>